<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="trmc_inherit_res_currency" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.trmc</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="account.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='currency_id']" position="after">
                        <div>
                           <h3>Tasas de Cambio Autom√°ticas</h3> 
                        </div>
                        <div>
                            <label for="update_trm" class="o_form_label">Actualizar Manualmente</label>
                            <div class="o_form_input">
                                <field name="update_trm" class="o_checkbox"/>
                            </div>
                        </div>
                        <div>
                            <div>
                                <label string="Servicio" for="service"/>
                                <field name="service"/>

                            </div>
                        </div>
                        <div>
                            <div>
                                <label string="Intervalo" for="interval"/>
                                <field name="interval" widget="selection"/>
                                
                            </div>
                        </div>
                        <div>
                        <div>
                            <field name="next_date" attrs="{'invisible': [('interval', '!=', 'manual')]}"/>
                            <field name="next_date" attrs="{'invisible': [('interval', '!=', 'daily')]}"/>
                            <field name="next_date" attrs="{'invisible': [('interval', '!=', 'monthly')]}"/>
                            <field name="next_date" attrs="{'invisible': [('interval', '!=', 'weekly')]}"/>
                     </div>
                    </div>       
                </xpath>
            </field>
        </record>
    </data>
</odoo>
