<odoo>
  <data>
     <record model="ir.ui.view" id="custom_modulo.list">
      <field name="name">trm.button.view</field>
      <field name="model">trm.data</field>
      <field name="arch" type="xml">
        <form>
          <header>
            <button name ="mostrartrm" string ="Mostrar TRM" type="object" class="oe_highlight"/>
          </header>
          <sheet>
            <group>
              <field name="date"/>
              <field name="value"/>
            </group>
            <group>
              <label>Fecha de la TRM</label>
              <div>
                <fiel name="date" widget="date"/>
              </div>
            </group>
            <group>
              <label>Valor de la TRM</label>
              <div>
                <field name="value" widget="float"/>
              </div>
            </group>
          </sheet> 
        </form>
     </field>
   </record>     
  </data>
</odoo>